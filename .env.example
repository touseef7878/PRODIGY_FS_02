# Employee Management System Environment Configuration
# Copy this file to .env and update the values as needed

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True

# Database Configuration
# For SQLite (Default - good for development)
DATABASE_URL=sqlite:///employee_management.db

# For PostgreSQL (Recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/employee_management

# For MySQL
# DATABASE_URL=mysql://username:password@localhost:3306/employee_management

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# File Upload Configuration
UPLOAD_DIR=app/uploads
MAX_CONTENT_LENGTH_MB=2

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:8000,http://localhost:3000,http://localhost:5000,http://127.0.0.1:5000

# Rate Limiting Configuration
RATE_LIMIT_DEFAULT=100 per hour
# For production with Redis
# REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO

# Email Configuration (Optional - for future features)
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your-email@gmail.com
# MAIL_PASSWORD=your-email-password

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@prodigyinfotec.com
ADMIN_PASSWORD=ProdigyAdmin2024!

# Application Settings
APP_NAME=PRODIGY INFOTEC Employee Management System
APP_VERSION=1.0.0

# Security Settings (for production)
# FORCE_HTTPS=True
# SESSION_COOKIE_SECURE=True
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# Performance Settings
# SQLALCHEMY_POOL_SIZE=10
# SQLALCHEMY_POOL_TIMEOUT=20
# SQLALCHEMY_POOL_RECYCLE=3600

# Backup Settings (for production)
# BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/backups/employee_management